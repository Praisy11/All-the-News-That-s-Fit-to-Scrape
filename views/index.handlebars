<div class="container-head2"></div>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">News Scraper</a>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="btn btn-danger nav-item nav-link active" href="/">Home</a>
      <a class="btn btn-danger nav-item nav-link" href="/saved">Saved articles</a>
      <a class="btn btn-danger scrape-new">Scrape new Articles</a>
    </div>
  </div>
</nav>
</div>


<div class="container article-container">
  <h3>Articles</h3>
  {{#each articles}}
    <div class="card bg-dark mb-3">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <a href='https://www.nytimes.com{{link}}' class="card-link" target="_blank">View article </a>
        <p class="card-text">{{summary}}...</p>
        <a data-articleId="{{_id}}" class="btn btn-primary save-btn">Save article</a>
      </div>
    </div>
  {{/each}}
</div>